<% include partials/header %>
<link rel="stylesheet" href="/style/campinfo.css">
<link rel="stylesheet" type="text/css" href="Assets\css\fontawesome-free-5.3.1-web\css\all.min.css">
<% include partials/nevigation %>

  <div class="container">
       <div class=" row ">
           <div class="col-sm-2 container2">
              <div class="container">
                   <p>SOmething is on the way</p>
              </div>
            </div>

            <div class="col-sm-10">
                <div class="container">
                      <div class= 'thumbnail'>
                          <h1><%=camp.name%></h1>
                          <img src="<%=camp.image%>" alt="img">
                          <p class= 'discription'><%=camp.discription%></p>
                      </div>
                      <div class='thumbnail'>
                          <% camp.comment.forEach(function(campcomment){%>
                          <p><strong><%=campcomment.author%></strong>: <%=campcomment.text%></p>
                          <button class="btn btn-danger"><img src= "/image/art-and-design.svg" ></button>

                          <%})%>

                          <% if(isLoggedIn){ %>
                            <form action="/campgrounds/<%=camp.id%>" method="POST">
                                <textarea name="comment[text]" id="" cols="40" rows="4"></textarea>
                                <input type="hidden" name="comment[author]" value='<%= user%>'>
                                <p><button class='btn btn-success'>Submit</button></p>
                            </form>
                            <% } %>
                      </div>

               </div>
            </div>

       </div>
  </div>


<% include partials/footer %>
